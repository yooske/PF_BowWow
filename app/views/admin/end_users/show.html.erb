<div class="container">
  <div class="main-visual col-8 mx-auto">
    <h4 class="py-4 text-center">プロフィール</h4>
    <div class="mb-4 text-center"><%= image_tag @end_user.get_profile_image, size: "140x140",class: "rounded-circle profile-icon" %></div>
    <table class="table">
      <tbody>
        <tr>
          <td><h5>名前</h5></td>
          <td><h5><%= @end_user.name %></h5></td>
        </tr>
        <tr>
          <td><h5>ニックネーム</h5></td>
          <td><h5><%= @end_user.nickname %></h5></td>
        </tr>
        <tr>
          <td><h5>自己紹介</h5></td>
          <td><h5><%= @end_user.introduction %></h5></td>
        </tr>
        <tr>
          <td class="py-4">
            <%= link_to "ユーザー情報を編集する", edit_admin_end_user_path(@end_user), class: "btn btn-info rounded-pill mr-3" %>
            <%= link_to "退会させる", admin_end_user_path(@end_user), method: :delete, "data-confirm" => "本当に退会させますか？", class: "btn btn-danger rounded-pill" %>
          </td>
          <td class="py-4"><%= link_to "投稿を見る", posts_admin_end_user_path(@end_user), class: "btn btn-success rounded-pill float-right" %></td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
</div>

