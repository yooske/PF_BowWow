<div class="container">
  <div>
    <h4 class="mb-4">グループ編集</h4>
    <%= render 'layouts/error_message', obj: @group %>
    <div class="p-3">
      <%= form_with model: @group, url: public_group_path(@group), method: :patch, local: true do |f| %>
        <div class="form-group">
          <label for="group_name">グループ名</label>
          <p class="pb-3"><%= f.text_field :name, class: "form-control group_name" %></p>
        </div>
        <div class="form-group">
          <label for="group_introduction">紹介文</label>
          <p class="pb-3"><%= f.text_area :introduction, class: "form-control group_introduction" %></p>
        </div>
        <div class="form-group">
          <label for="group_image">グループアイコン</label><br>
          <p class="pb-4"><%= f.file_field :image, class: "group_image" %></p>
        </div>
        <div class="form-group">
          <%= f.submit '変更を保存', class: "btn btn-info rounded-pill" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
