<div class="container">
  <div class="row">
    <h4 class="mb-4">グループ一覧</h4>
    <% if end_user_signed_in? %>
      <div class="ml-auto"><%= link_to "グループを作成する", new_public_group_path, class: "btn btn-success rounded-pill" %></div>
    <% end %>
    <div class="main-visual col-lg-12 shadow-sm p-5 pb-4 bg-body rounded">
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="col-1"></th>
            <th class="col-2">グループ名</th>
            <th class="col-4">グループ紹介</th>
            <th class="col-2">メンバー</th>
            <th class="col-1"></th>
            <th class="col-2"></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr class="border-bottom">
              <td class="col-1 align-middle border-left">
                <%= link_to public_group_path(group) do %>
                  <%= image_tag group.get_image, size: "75x75", class: "rounded-circle group-icon" %>
                <% end %>
              </td>
              <td class="col-2 align-middle border-right"><%= link_to "#{group.name}", public_group_path(group), class: "text-dark" %></td>
              <td class="col-4 align-middle border-right"><%= group.introduction %></td>
              <td class="col-2 align-middle border-right"><%= group.group_users.count %> 人</td>
              <td class="col-1 align-middle border-right text-center">
                <%= link_to public_group_path(group), class: "door" do %>
                  <i class="fas fa-door-open"></i>
                <% end %>
              </td>
              <td class="col-2 align-middle border-right text-center">
                <%= render "public/groups/btn", group: group %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
