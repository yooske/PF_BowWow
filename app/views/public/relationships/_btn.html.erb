<% if current_end_user != end_user %>
  <% if current_end_user.following?(end_user) %>
    <%= link_to "フォロー外す", public_end_user_relationships_path(end_user.id), method: :delete, class: "btn btn-secondary" %>
  <% else %>
    <%= link_to "フォローする", public_end_user_relationships_path(end_user.id), method: :post, class: "btn btn-info" %>
  <% end %>
<% end %>