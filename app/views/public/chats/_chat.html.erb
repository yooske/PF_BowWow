<% chats.each do |chat| %>
  <% if chat.end_user_id == current_end_user.id %>
    <div class="balloon">
      <div class="my-message float-right"><span class="text-secondary"><%= time_ago_in_words(chat.created_at) %>前</span><p><%= chat.message %></p></div>
    </div>
  <% else %>
    <div class="balloon">
      <div><%= image_tag chat.end_user.get_profile_image, size: "50x50", class: "rounded-circle profile-icon" %></div>
      <div class="message float-left"><p><%= chat.message %></p><span class="text-secondary"><%= time_ago_in_words(chat.created_at) %>前</span></div>
    </div>
  <% end %>
<% end %>