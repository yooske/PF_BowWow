<div class="container">
  <h4 class="mb-5">新規投稿</h4>
  <%= render 'layouts/error_message', obj: @post %>
  <div class="mb-5">
    <%= form_with model: @post, url: public_posts_path, method: :post do |f| %>
      <div class="d-flex mb-5">
        <h5 class="mr-5">画像</h5>
        <%= f.file_field :image, accept: "imaege/*", class: "ml-5" %>
      </div>
      <div class="d-flex mb-5">
        <h5 class="mr-5">動画</h5>
        <%= f.file_field :video, accept: "video/*", class: "ml-5" %>
      </div>
      <div class="d-flex mb-5">
        <h5 class="mr-5">タイトル</h5>
        <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "ml-2" %>
      </div>
      <div class="d-flex mb-5">
        <h5 class="mr-5">本文</h5>
        <%= f.text_area :body, autofocus: true, autocomplete: "body", class: "ml-5" %>
      </div>
      <div class="mb-5">
        <h5>タグ選択</h5>
        <div class="d-flex flex-wrap">
          <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name, include_hidden: false) do |tag| %>
              <div class='form-check'>
                  <%= tag.label class: 'form-check-label mr-2' do %>
                      <%= tag.check_box class: 'form-check-input' %>
                      <%= tag.text %>
                  <% end %>
              </div>
          <% end %>
        </div>
      </div>
      <%= f.submit "投稿する", class: "btn btn-success rounded-pill" %>
    <% end %>
  </div>
</div>
