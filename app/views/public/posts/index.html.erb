<div class="container">
  <div class="row">
    <div class="col-2">
      <div class="tag-list">
        <h6 class="p-3">タグ検索</h6>
        <%= form_tag({controller:"posts",action:"index"}, method: :get) do %>
            <% Tag.all.each do |tag| %>
                <div class="d-flex m-2"><%= check_box :tag_ids, tag.name %><p id="tag"><%= tag.name %></p></div>
            <% end %>
            <p class="p-3"><%= button_tag type: "submit", class: "tag_search" do %>
              <i class="fas fa-search"></i>
            <% end %>
            </p>
        <% end %>
      </div>
    </div>
    <div class="col-10">
      <h4 class="mb-4 pl-4">投稿一覧</h4>
      <%= render "public/posts/index", posts: @posts %>
    </div>
  </div>
  <%= paginate @posts %>
</div>
