<div class="container">
  <div class="col-8 mx-auto">
    <h4 class="mb-5 text-center">ログイン</h4>
    <%= form_with model: @end_user, url: end_user_session_path do |f| %>
      <div class="field my-4 text-center">
        <%= f.label :email, 'メールアドレス　　　　　　　　　　' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field mt-4 mb-5 text-center">
        <%= f.label :password, 'パスワード　　　　　　　　　　　　' %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="actions text-center my-3">
        <%= f.submit "ログイン", class: "btn btn-secondary" %>
      </div>
    <% end %>
    <p class="text-center">会員登録がお済み出ない方は<%= link_to "こちら", new_end_user_session_path %>から新規登録を行ってください。<p>
  </div>
</div>