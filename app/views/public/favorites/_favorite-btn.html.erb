<% if post.favorited_by?(current_end_user) %>
  <%= link_to public_post_favorites_path(post), method: :delete, remote: true, class: "text-danger" do %>
    <i class="fas fa-heart"></i><%= post.favorites.count %>
  <% end %>
<% else %>
  <%= link_to public_post_favorites_path(post), method: :post, remote: true, class: "text-dark" do %>
    <i class="far fa-heart"></i><%= post.favorites.count %>
  <% end %>
<% end %>