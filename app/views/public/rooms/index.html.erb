<div class="container">
  <h4>チャット一覧</h4>
  <div class="row">
    <div class="main-visual col-lg-10 shadow-sm p-5 pb-4 bg-body rounded">
      <% @another_user_rooms.each do |user_room| %>
        <% if user_room.end_user.is_deleted == false %>
          <%= link_to public_chat_path(user_room.end_user), class: "d-flex pb-2 mb-2 border-bottom text-dark" do %>
            <div class="col-2"><%= image_tag user_room.end_user.get_profile_image, size: "50x50", class: "rounded-circle profile-icon" %></div>
            <div class="col-3"><%= user_room.end_user.nickname %></div>
            <div class="col-7"><%= truncate(Chat.find_by(id: user_room.room.chat_ids.last)&.message, length: 20) %></div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
