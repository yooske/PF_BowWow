<div class="container">
  <div class="col-8 mx-auto">
    <h4 class="mb-5 text-center">新規会員登録</h4>
    <%= form_with model: @end_user, url: end_user_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="field my-4 text-center">
        <%= f.label :name, '名前　　　　　　　　　　　　　　　' %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
      <div class="field my-4 text-center">
        <%= f.label :nickname, 'ニックネーム　　　　　　　　　　　' %>
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
      </div>
      <div class="field my-4 text-center">
        <%= f.label :email, 'メールアドレス　　　　　　　　　　' %>
        <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field my-4 text-center">
        <%= f.label :introduction, '自己紹介　　　　　　　　　　　　　' %>
        <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class: "mr-3" %>
      </div>
      <div class="field my-4 text-center">
        <%= f.label :password, 'パスワード（６文字以上）　　　　　' %>
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <div class="field mt-4 text-center mb-5">
        <%= f.label :password_confirmation, 'パスワード（確認用）　　　　　　　' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <div class="actions text-center my-3">
        <%= f.submit "新規登録", class: "btn btn-secondary" %>
      </div>
    <% end %>
    <p class="text-center">既に登録済みの方は<%= link_to "こちら", new_end_user_session_path %>からログインしてください。<p>
  </div>
</div>
